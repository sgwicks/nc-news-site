{
  "api": {
    "GET /api": {
      "description": "serves up a json representation of all the available endpoints of the api"
    },
    "GET /api/topics": {
      "description": "serves an array of all topics",
      "queries": [],
      "exampleResponse": {
        "topics": [
          {
            "slug": "football",
            "description": "Footie!"
          }
        ]
      }
    },
    "GET /api/articles": {
      "description": "serves an array of all articles",
      "queries": ["author", "topic", "sort_by", "order"],
      "exampleResponse": {
        "articles": [
          {
            "title": "Seafood substitutions are increasing",
            "topic": "cooking",
            "author": "weegembump",
            "article_id": 1,
            "created_at": "2017-03-11 12:21:54.171+00",
            "votes": 200,
            "comment_count": 3
          }
        ]
      }
    },
    "GET /api/users/:username": {
      "description": "serves an object of a given user",
      "queries": [],
      "exampleResponse": {
        "user": {
          "username": "samothyjones",
          "name": "sam",
          "avatar_url": "www.avatars.com/121"
        }
      }
    },
    "GET /api/articles/:article_id": {
      "description": "serves an object of a given article",
      "queries": [],
      "exampleResponse": {
        "article": {
          "author": "samothyjones",
          "title": "How to Get Ratio'd on Twitter",
          "article_id": 1,
          "body": "some text",
          "topic": "social media",
          "created_at": "2017-03-11 12:21:54.171+00",
          "votes": 1,
          "comment_count": 389
        }
      }
    },
    "PATCH /api/articles/:article_id": {
      "description": "updates votes on the given article",
      "queries": [],
      "exampleRequest": {
        "inc_votes": 1
      },
      "exampleResponse": {
        "article": {
          "author": "samothyjones",
          "title": "How to Get Ratio'd on Twitter",
          "article_id": 1,
          "body": "some text",
          "topic": "social media",
          "created_at": "2017-03-11 12:21:54.171+00",
          "votes": 2,
          "comment_count": 389
        }
      }
    },
    "POST /api/articles/:article_id/comments": {
      "description": "posts a new comment to an article",
      "queries": [],
      "exampleRequest": {
        "username": "timothysampson",
        "body": "Take a look at this guy!"
      },
      "exampleResponse": {
        "comment": {
          "username": "timothysampson",
          "body": "Take a look at this guy!"
        }
      }
    },
    "GET /api/articles/:article_id/comments": {
      "description": "gets all comments from an article",
      "queries": ["sort_by", "order"],
      "exampleResponse": {
        "comments": [
          {
            "author": "timothysampson",
            "body": "Take a look at this guy!",
            "comment_id": 390,
            "votes": 3,
            "created_at": "2017-03-11 12:21:54.171+00"
          }
        ]
      }
    },
    "PATCH /api/comments/:comment_id": {
      "description": "updates votes on the given comment",
      "queries": [],
      "exampleRequest": {
        "inc_votes": 1
      },
      "exampleResponse": {
        "comment": {
          "author": "timothysampson",
          "body": "Take a look at this guy!",
          "comment_id": 390,
          "votes": 4,
          "created_at": "2017-03-11 12:21:54.171+00"
        }
      }
    },
    "DELETE /api/comments/:comment_id": {
      "description": "deletes the given comment",
      "queries": [],
      "exampleResponse": "Status 204"
    }
  }
}
